model ShopTestimony {
    id      Int     @id @default(autoincrement())
    message String  @db.LongText
    rating  Int

    created_at DateTime @default(now())

    order Order @relation(fields: [order_id], references: [id], onDelete: Cascade)
    order_id String @unique
    
    @@map("shop_testimonies")
}

model AppTestimony {
    id      Int     @id @default(autoincrement())
    message String  @db.LongText
    from    String
    role    String?

    created_at DateTime @default(now())

    @@map("app_testimonies")
}
