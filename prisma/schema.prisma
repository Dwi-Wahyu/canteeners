generator client {
  provider = "prisma-client-js"
  output   = "../src/app/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  name       String
  username   String    @unique
  password   String
  avatar     String?
  last_login DateTime?
  role       Role

  email        String?
  phone_number String?

  shop_owned Shop?

  orders Order[]

  messages Message[]

  quick_chats QuickChat[]

  conversations ConversationParticipant[]

  violations CustomerViolations[]

  @@index([role])
  @@index([last_login])
  @@map("users")
}

enum Role {
  ADMIN
  CUSTOMER
  SHOP_OWNER
  COURIER
}

model Canteen {
  id        Int    @id @default(autoincrement())
  name      String
  image_url String
  shops     Shop[]

  @@map("canteens")
}

model Shop {
  id          String  @id @default(uuid())
  name        String
  description String?
  image_url   String
  canteen     Canteen @relation(fields: [canteen_id], references: [id])
  canteen_id  Int

  status           ShopStatus @default(ACTIVE)
  suspended_reason String?

  open_time  DateTime?
  close_time DateTime?

  products Product[]
  orders   Order[]
  owner    User      @relation(fields: [owner_id], references: [id])
  owner_id String    @unique

  payments Payment[]
  // complaints ShopComplaints[]

  @@index([canteen_id])
  @@index([name])
  @@map("shops")
}

